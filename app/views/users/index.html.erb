<p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
     <%= render 'books/list', user: @user, book: @book1 %>
      <div class="col-md-8 offset-md-1"><br>
       <h2>Users</h2>
        <table class="table">
         <thead>
          <tr>
             <th>image</th>
             <th>name</th>
             <th colspan="3"></th>
          </tr>
         </thead>

         <% @users.each do |user| %>
         <tbody>
          <tr>
             <td>
              <%= link_to user_path(current_user) do %>
              <%= image_tag user.get_profile_image(100,100) %>
              <% end %>
             </td>
             <td>
              <%= user.name  %>
             </td>
             <td>
              <%= link_to "Show", user_path(user.id) %>
             </td>
          </tr>
         </tbody>
         <% end %>
        </table>
      </div>
    </div>
  </div>